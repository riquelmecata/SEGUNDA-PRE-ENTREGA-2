{{#if productos.length }}
<div class="justify-content-center row">
    {{#each productos}}
    <div class="card m-2 col-2">
        <img src="https://media.tenor.com/WpgSYAYBpLkAAAAC/hacker.gif" class="card-img-top" alt="coderhouse">
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">Description: {{description}}</p>
            <p>Precio: ${{price}}</p>
            <p>imagenes url:</p>
            {{#each thumbnails}}
            <ul>
                <li>{{this}}</li>
            </ul>
            {{/each}}
            <p>Codigo: {{code}}</p>
            <p>Stock: {{stock}}</p>
            <a href='http://localhost:8080/products/{{_id}}'><button class="btn my-2 mx-4 btn-warning ">Ver
                    Detalles</button></a>
            <button class="btn mx-2 btn-outline-success" data-id={{_id}}>Agregar al carrito</button>
            
        </div>
    </div>
    {{/each}}
</div>

<div class="justify-content-center row">
    {{#if hasPrevPage}}
    <a href={{prevLink}}><button class="btn btn-warning mb-4 mx-1">PÃ¡gina anterior</button></a>
    {{/if}}
    {{#if hasNextPage}}
    <a href={{nextLink}}><button class="btn btn-warning mb-4">Pagina Siguiente</button></a>
    {{/if}}
</div>

{{else}}

<h2>Sin productos.</h2>
{{/if}}

<script src="/js/index.js"></script>
